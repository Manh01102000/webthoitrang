# Stage 1: Build dependencies với Composer (Giảm dung lượng & cache tốt hơn)
FROM composer:latest AS build

WORKDIR /app

# Chỉ copy composer.json & composer.lock để tận dụng cache
COPY composer.json composer.lock ./
RUN composer install --no-dev --optimize-autoloader --prefer-dist

# Stage 2: Setup PHP + Apache
FROM php:8.2-apache

# Cài đặt extensions cần thiết
RUN apt-get update && apt-get install -y \
    libpng-dev libjpeg-dev libfreetype6-dev \
    zip unzip curl git libonig-dev libzip-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo_mysql mbstring zip gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy file cấu hình Apache
COPY docker/apache-config.conf /etc/apache2/sites-available/000-default.conf
RUN a2enmod rewrite

# Thiết lập thư mục làm việc
WORKDIR /var/www/html

# Copy toàn bộ source code vào container
COPY . .

# Copy thư viện từ Stage 1 (Không cần chạy composer install lại)
COPY --from=build /app/vendor ./vendor

# Cấp quyền cho storage và bootstrap/cache
RUN chmod -R 777 storage bootstrap/cache

# Chạy với user không phải root để tăng bảo mật
RUN useradd -m laravel && chown -R laravel:laravel /var/www/html
USER laravel

# Expose cổng 80
EXPOSE 80

# Khởi động Apache khi container chạy
CMD ["apache2-foreground"]
